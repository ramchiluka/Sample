<p id="notice"><%= notice %></p>

<h1>Registers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Sex</th>
      <th>Email</th>
      <th>Address</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>.
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.first_name %></td>
        <td><%= register.last_name %></td>
        <td><%= register.sex %></td>
        <td><%= register.email %></td>
        <td><%= register.address %></td>
        <td><%= register.image.url(:thumb) %></td>
        <td><%= link_to 'Show', register %></td>
        <td><%= link_to 'Edit', edit_register_path(register) %></td>
        <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Register', new_register_path %>
